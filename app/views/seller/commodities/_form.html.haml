= simple_form_for [:seller,@commodity] , html: { class: 'form-horizontal' } do |f|
  -#= f.error_notification

  .form-inputs
    = f.input :title
    -#= f.input :user_id
    -#= f.input :status

    -#= f.input :commodity_number
    -#= f.input :orders_count
    -#= f.input :comments_count

  .form-actions
    = f.submit '发送', class: 'btn btn-primary'
    = link_to '返回', 'javascript:window.history.go(-1);', class: 'btn'


