= link_to '返回', 'javascript:window.history.go(-1);', class: 'btn'
.center
  %h3= @message.title
  .message_info
    = "发件人：#{display_user_link(@message.sender)}".html_safe
    = "收件人：#{display_user_link(@message.receiver)}".html_safe
    = "发送时间：#{@message.created_at.to_s(:db)}"
.well= simple_format @message.content
- if @message.sender
  .pull-right= link_to '回复短信', new_message_path(receiver_name: @message.sender.name), class: 'btn btn-info' if @message.inbox?
  